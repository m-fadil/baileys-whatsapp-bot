{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "target": "esnext",
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@handlers/*": ["handlers/*"],
            "@utils/*": ["utils/*"],
            "@features/*": ["features/*"],
            "@model/*": ["database/model/*"]
        },
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["node_modules/@types", "./src/types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "baileys", "test", "dist"]
}
